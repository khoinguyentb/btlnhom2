<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/hddv_tv_ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đặt dịch vụ"
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/hddv_tv_phong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên phòng yêu cầu dịch vụ"
                    android:textSize="18dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/hddv_tv_ten_khach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên khách hàng"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/hddv_tv_tu_ngay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Từ ngày "
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/hddv_tv_den_ngay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dến ngày "/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/hddv_tv_loai_dv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại dịch vụ"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/hddv_tv_so_luong_dv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng dịch vụ " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/hddv_tv_tong_tien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền "
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/btn_delete_hddv"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/ic_delete" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
