<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bgitem"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="@string/title_thongke"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@color/magenta"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_height="@dimen/_35sdp"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/_200sdp">

        <EditText
            android:id="@+id/doanhthu_edt_tungay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/custom_edittext"
            android:hint="@string/hint_tu_ngay"
            android:paddingStart="45dp" />

        <ImageView
            android:id="@+id/doanhthu_img_tungay"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignTop="@id/doanhthu_edt_tungay"
            android:layout_alignBottom="@id/doanhthu_edt_tungay"
            android:layout_alignStart="@id/doanhthu_edt_tungay"
            android:src="@drawable/dateicon" />
        <EditText
            android:background="@drawable/custom_edittext"
            android:id="@+id/doanhthu_edt_denngay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="50dp"
            android:hint="@string/hint_den_ngay"
            android:paddingStart="45dp"/>

        <ImageView
            android:id="@+id/doanhthu_img_denngay"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignTop="@id/doanhthu_edt_denngay"
            android:layout_alignBottom="@id/doanhthu_edt_denngay"
            android:layout_alignStart="@id/doanhthu_edt_denngay"
            android:src="@drawable/dateicon" />
    </RelativeLayout>


    <TextView
        android:id="@+id/doanhthu_tv_doanhthutong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        android:text="@string/tv_doanh_thu_tong"
        android:layout_marginTop="10dp"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/doanhthu_tv_doanhthuDV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        android:text="@string/tv_doanh_thu_dich_vu"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/doanhthu_tv_doanhthuDenBu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:layout_gravity="center"
        android:text="@string/tv_doanh_thu_den_bu"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/background_button"
            android:id="@+id/doanhthu_btn_tinh"
            android:layout_gravity="center"
            android:text="@string/btn_thong_ke"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content"/>

        <Button
            android:background="@drawable/background_button"
            android:id="@+id/doanhthu_btn_back"
            android:layout_gravity="center"
            android:text="@string/btn_quay_lai"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>